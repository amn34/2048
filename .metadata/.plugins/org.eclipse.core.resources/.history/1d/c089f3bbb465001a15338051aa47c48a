package models;

public class Block {

	private int myNumber;

	/**
	 * Creates a block
	 * 90% chance to be a 2 
	 * 10% chance to be a 4
	 */
	public Block() {
		double rand = Math.random();
		if(rand < 0.8) {
			myNumber = 2;
		} else {
			myNumber = 4;
		}
	}
	
	public int getNumber() {
		return myNumber;
	}
	
	
	
	
	public String toString() {
		return Integer.toString(myNumber);
	}
	
}
